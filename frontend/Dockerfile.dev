# Frontend Development Dockerfile
# Used with docker-compose.dev.yml for hot reloading

FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start in development mode
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
